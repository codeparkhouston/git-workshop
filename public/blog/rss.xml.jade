doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
  title= site.title
  description= site.description
  link= site.url
  | <atom:link href="http://baseline.harp.nu/blog/rss.xml" rel="self" type="application/rss+xml" />
  for post, slug in public.blog._data
    if post.layout !== false
      item
        title= post.title
        description= post.description
        pubDate= post.date
        link= site.url + "/blog/" + slug
        guid(isPermaLink='true')= site.url + "/blog/" + slug